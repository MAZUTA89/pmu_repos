<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.control_tools_fragments.TestControlsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Using checkbox:"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkBox_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First checkbox" />

            <CheckBox
                android:id="@+id/checkBox_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Second check box" />

            <Button
                android:id="@+id/button_CheckBoxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Using radio button:"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radio_group_control"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButton_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USA" />

                <RadioButton
                    android:id="@+id/radioButton_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kanada" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Your choice :"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Using DatePicker:"
                android:textSize="20sp" />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="388dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

            <TextView
                android:id="@+id/text_date_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Using TimePicker:"
                android:textSize="20sp" />

            <TimePicker android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeTextView" />

            <TextView
                android:id="@+id/text_time_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>